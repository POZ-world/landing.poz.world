{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "outFile": "./dist/bundle.js",
    "paths": {
      "emoji-mart/dist/utils/data": [
        "./node_modules/emoji-mart-lazyload/dist/utils/data"
      ],
      "emoji-mart/data/all.json": [
        "./node_modules/emoji-mart-lazyload/data/all.json"
      ],
      "emoji-mart/": [
        "./node_modules/emoji-mart-lazyload/dist/"
      ],
      "emoji_compressed/": [
        "@poz-world/poz.world/mastodon/features/emoji/emoji_compressed"
      ],
    },
    "resolveJsonModule": true,
  },
  // "files": [
  //   "src",
  // ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/**/*.svg",
    "src/**/*.png",
    "src/**/*.jpg",
    "src/**/*.jpeg",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}