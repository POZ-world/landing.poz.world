{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "noEmit": false,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "paths": {
      "emoji-mart/dist/utils/data": [
        "./node_modules/emoji-mart-lazyload/dist/utils/data"
      ],
      "emoji-mart/data/all.json": [
        "./node_modules/emoji-mart-lazyload/data/all.json"
      ],
      "emoji-mart/": [
        "./node_modules/emoji-mart-lazyload/dist/"
      ],
      "@tsconfig/*": ["./node_modules/@tsconfig/*"],
      "@/*": ["src/*"],
    },
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/**/*.svg",
    "src/**/*.png",
    "src/**/*.jpg",
    "src/**/*.jpeg", 
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "buildOptions": {
    "force": true,
    "incremental": true,
    "verbose": true,
    "traceResolution": true
  }
}